{
  "name": "@integralrsg/igraph",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "default": "./dist/igraph.css"
    },
    "./dist/igraph.css": "./dist/igraph.css"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist && npm run copy-types",
    "copy-types": "node -e \"const fs=require('fs');const path='dist/styles.d.ts';const content='declare module \\'@integralrsg/igraph/styles\\' { const styles: string; export default styles; }';fs.writeFileSync(path, content);\"",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  }
}
