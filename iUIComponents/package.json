{
  "name": "@integralrsg/iuicomponents",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "default": "./dist/iuicomponents.css"
    },
    "./dist/iuicomponents.css": "./dist/iuicomponents.css",
    "./storage":{
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "require": "./dist/storage/index.cjs",
      "default": "./dist/storage/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json && npm run copy-types",
    "copy-types": "node -e \"const fs=require('fs');const path='dist/styles.d.ts';const content='declare module \\'@integralrsg/iuicomponents/styles\\' { const styles: string; export default styles; }';fs.writeFileSync(path, content);\"",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0"
  }
}
