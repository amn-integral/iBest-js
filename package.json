{
  "private": true,
  "type": "module",
  "workspaces": [
    "iVentedBlast-js",
    "iMath",
    "iGSDOF",
    "iUIComponents",
    "iCubicle"
  ],
  "scripts": {
    "build_iMath": "npm run build -w iMath && npm run sync-builds",
    "build_iUIComponents": "npm run build -w iUIComponents && npm run sync-builds",
    "build_iGSDOF": "npm run build -w iMath &&  npm run build -w iUIComponents && npm run build -w iGSDOF && npm run sync-builds",
    "sync-builds": "node scripts/sync-workspace-builds.cjs",
    "setup-links": "node scripts/setup-workspace-links.cjs",
    "unlink": "node scripts/unlink-workspace.cjs",
    "postinstall": "node scripts/setup-workspace-links.cjs",
    "report-sizes": "node scripts/report-all-sizes.js",
    "clean": "rm -rf **/dist/*"
  },
  "devDependencies": {
    "gzip-size": "^7.0.0",
    "pretty-bytes": "^7.1.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "webgl-plot": "^0.7.2"
  }
}
