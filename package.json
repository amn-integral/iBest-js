{
  "private": true,
  "type": "module",
  "workspaces": [
    "iVentedBlast-js",
    "iMath",
    "iGraph",
    "iGSDOF",
    "iUIComponents"
  ],
  "scripts": {
    "build_iMath": "npm run build -w iMath",
    "build_iGraph": "npm run build -w iGraph",
    "build_iUIComponents": "npm run build -w iUIComponents",
    "build_iGSDOF": "npm run build -w iMath && npm run build -w iGraph && npm run build -w iUIComponents && npm run build -w iGSDOF",
    "setup-links": "node scripts/setup-workspace-links.cjs",
    "postinstall": "node scripts/setup-workspace-links.cjs",
    "report-sizes": "node scripts/report-all-sizes.js",
    "clean": "rm -rf **/dist/*"
  },
  "devDependencies": {
    "gzip-size": "^7.0.0",
    "pretty-bytes": "^7.1.0"
  }
}
